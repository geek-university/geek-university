- content_for :title_section, 'Отзыв о работе сайта'

= form_for @feedback, html: {class: 'form-horizontal'} do |f|
  .control-group
    = f.label :body, class: 'control-label'
    .controls= f.text_area :body, autofocus: true

  .control-group
    = f.label :email, class: 'control-label'
    .controls= f.text_field :email

  %fieldset.form-actions= f.submit class: 'btn btn-primary'