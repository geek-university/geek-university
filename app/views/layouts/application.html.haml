!!!
%html
  %head
    %meta{charset: "utf-8"}
    %title
      Geek university -
      =yield :title_section
    = stylesheet_link_tag    "application"
    = csrf_meta_tags
  %body
    = render 'shared/header'
    .container
      -if !user_signed_in?
        .row
          .span2
            = link_to image_tag( 'logo.png', {alt: 'logo', width: "120"}), :root, {id: 'logo'}
          .span8{style: "font-family: 'Helvetica Neue'; color: #444444; font-size: 60px;"}
            %h1#header Geek University
            %p.lead We will geek u
      .row
        -if notice
          %p.notice.alert.alert-info= notice
        -if alert
          %p.alert.alert-error= alert
        = yield

= javascript_include_tag "application"