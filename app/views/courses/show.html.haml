- content_for :title_section, "Курс #{@course.name}"
#course
  .row
    %h2=@course.name
    - if can? :edit, @course
      = link_to '[Edit]', [:edit, @course] if can? :edit, @course


  .row
    .span3
      %ul.nav.nav-tabs.nav-stacked
        = render @sections
        - if can? :manage, @course
          %li
            = link_to [:new, @course, 'section'], {class: 'btn btn-primary'} do
              %span=I18n.t('course.section.add')
              .edit-link
                = content_tag 'i', '', class: 'icon-plus icon-white'


    .span8
      %ul.nav.nav-pills
        = render @materials
        - if can? :manage, @course
          %li
            = link_to [:new, @course, @section, 'material'], {class: 'btn btn-primary'} do
              .edit-link
                = content_tag 'i', '', class: 'icon-plus icon-white'
      %div
        - if !@material.nil?
          - if @material.as_material_type == 'Lecture'
            %iframe{width: "420", height: "315", src: "http://www.youtube.com/embed/#{@material.specific.youtube_link}", frameborder: "0", allowfullscreen: ''}
          - elsif @material.as_material_type == 'Document'
            = @material.specific.body
